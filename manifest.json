{

  "manifest_version": 2,
  "name": "Icono Blog Cosillas de Juansal",
  "description": "Abre un men√∫ para acceder directamente a las secciones del blog.",
  "version": "2.0.0",
  "default_locale": "es",

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "contextMenus",
    "activeTab",
    "tabs"
  ],

  "icons": { "16": "icons/icon16.png",
             "48": "icons/icon48.png",
             "96": "icons/icon96.png",
            "128": "icons/icon128.png" },

    "browser_action": {
     "default_icon": "icons/icon.png",
     "default_popup": "menu/menu.html"
    }

}
